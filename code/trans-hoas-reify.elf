% Translation from HOAS to reified.
trans-hr : exp -> rexp -> type.

trans-hr/num : trans-hr (num N) (rnum N).

trans-hr/lam : trans-hr (lam E) (rlam R)
              <- {x} {y} trans-hr x (rvar y) -> trans-hr (E x) (R y).

trans-hr/app : trans-hr (app E1 E2) (rapp R1 R2)
              <- trans-hr E1 R1
              <- trans-hr E2 R2.
